{
  "name": "@zwave-js/bindings-esphome",
  "version": "15.11.0",
  "description": "zwave-js: Host bindings for ESPHome",
  "keywords": [],
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "exports": {
    ".": {
      "@@dev": "./src/index.ts",
      "default": "./build/index.js"
    },
    "./serial": {
      "@@dev": "./src/serial/esphome.ts",
      "default": "./build/serial/esphome.js"
    }
  },
  "files": [
    "build/**/*.{js,cjs,mjs,d.ts,d.cts,d.mts,map}",
    "build/**/package.json"
  ],
  "sideEffects": false,
  "author": {
    "name": "AlCalzone",
    "email": "d.griesel@gmx.net"
  },
  "license": "MIT",
  "homepage": "https://github.com/zwave-js/zwave-js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zwave-js/zwave-js.git"
  },
  "bugs": {
    "url": "https://github.com/zwave-js/zwave-js/issues"
  },
  "funding": {
    "url": "https://github.com/sponsors/AlCalzone/"
  },
  "engines": {
    "node": ">= 20"
  },
  "scripts": {
    "build": "tsc -b tsconfig.json --pretty",
    "clean": "del-cli build/ \"*.tsbuildinfo\""
  },
  "devDependencies": {
    "@zwave-js/core": "workspace:*",
    "@zwave-js/serial": "workspace:*",
    "@zwave-js/shared": "workspace:*",
    "del-cli": "^6.0.0",
    "typescript": "5.8.3"
  }
}
